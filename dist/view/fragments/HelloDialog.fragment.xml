<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="helloDialog" title="Hello {/person/name}" titleAlignment="Center">
        <content>
            <core:Icon src="sap-icon://hello-world" size = "5rem" class="sapUiResponsiveMargin" hoverColor="blue">
                
            </core:Icon>
        </content>
        <beginButton>
            <Button text="{i18n>dialogCloseButtonText}" press=".onCloseDialog"></Button>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>