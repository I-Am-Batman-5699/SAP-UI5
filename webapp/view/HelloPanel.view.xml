<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="UI_FIVE.controller.HelloPanel">  
    <Panel headerText="{i18n>helloPanelTitle}"
    class="sapUiResponsiveMargin"
    width="auto"
    expandable="{device>/system/phone}"
    expanded = "{=!${device>/system/phone}}"
    accessibleRole="Region" >
        <content>
            <Button id="helloDialogButton" text="{i18n>openDialogButton}" press=".onOpenDialog" class="sapUiSmallMarginEnd" type="Emphasized" icon ="sap-icon://world"></Button>
            <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd myCustomButton"></Button>
            <Input value="{/person/name}" 
                valueLiveUpdate="true" width="40%"></Input>
                <Text text="Hello {/person/name}" class="sapUiSmallMargin"></Text>
                <FormattedText htmlText="Hello {/person/name}" class="sapUiSmallMargin 
                sapThemeHighlight-asColor myCustomText" ></FormattedText>
        </content>
    </Panel>
</mvc:View>